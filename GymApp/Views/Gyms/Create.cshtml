@model GymApp.Models.Gym

@{
    ViewData["Title"] = "Yeni Salon Ekle";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-0 shadow-lg rounded-4 mt-4">
            <div class="card-header bg-danger text-white p-4 rounded-top-4">
                <h3 class="fw-bold mb-0"><i class="fa-solid fa-plus-circle me-2"></i> Yeni Spor Salonu Ekle</h3>
                <small>Sisteme yeni bir şube tanımlayın.</small>
            </div>
            <div class="card-body p-5">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-4">
                        <label asp-for="Name" class="form-label fw-bold text-muted">Salon Adı</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa-solid fa-dumbbell text-danger"></i></span>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Örn: MACFit Serdivan" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="Address" class="form-label fw-bold text-muted">Adres</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-map-pin text-danger"></i></span>
                                <input asp-for="Address" class="form-control" placeholder="Mahalle, Sokak..." />
                            </div>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label asp-for="OpeningHours" class="form-label fw-bold text-muted">Çalışma Saatleri</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-clock text-danger"></i></span>
                                <input asp-for="OpeningHours" class="form-control" placeholder="09:00 - 23:00" />
                            </div>
                            <span asp-validation-for="OpeningHours" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label fw-bold text-muted">Salon Açıklaması</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa-solid fa-align-left text-danger"></i></span>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Salonun imkanlarını ve vizyonunu anlatın..."></textarea>
                        </div>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="card bg-light border-0 p-3 mb-4 rounded-3">
                        <h6 class="fw-bold text-muted mb-3">Salon İmkanları</h6>
                        <div class="d-flex flex-wrap gap-4">

                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="HasWifi" id="wifiSwitch">
                                <label class="form-check-label fw-bold text-dark" for="wifiSwitch"><i class="fa-solid fa-wifi text-danger me-2"></i> WiFi</label>
                            </div>

                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="HasShowers" id="showerSwitch">
                                <label class="form-check-label fw-bold text-dark" for="showerSwitch"><i class="fa-solid fa-shower text-danger me-2"></i> Duş</label>
                            </div>

                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="HasMusic" id="musicSwitch">
                                <label class="form-check-label fw-bold text-dark" for="musicSwitch"><i class="fa-solid fa-music text-danger me-2"></i> Müzik</label>
                            </div>

                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ImageUrl" class="form-label fw-bold text-muted">Kapak Fotoğrafı (URL)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa-solid fa-image text-danger"></i></span>
                            <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
                        </div>
                        <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Rating" class="form-label fw-bold text-muted">Başlangıç Puanı</label>
                        <div class="input-group w-50">
                            <span class="input-group-text bg-light"><i class="fa-solid fa-star text-warning"></i></span>
                            <input asp-for="Rating" type="number" step="0.1" min="0" max="5" class="form-control" value="0" />
                        </div>
                        <span asp-validation-for="Rating" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 mt-5">
                        <button type="submit" class="btn btn-danger btn-lg rounded-pill fw-bold shadow">
                            <i class="fa-solid fa-save me-2"></i> SALONU KAYDET
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Listeye Dön</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}