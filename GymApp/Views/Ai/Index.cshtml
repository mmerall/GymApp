@{
    ViewData["Title"] = "Yapay Zeka Antrenör";
}

<div class="row justify-content-center">
    <div class="col-md-8">

        <div class="text-center mb-5">
            <div class="bg-dark d-inline-block rounded-circle p-4 mb-3 shadow">
                <i class="fa-solid fa-robot fa-4x text-danger"></i>
            </div>
            <h1 class="fw-bold">AI Fitness Asistanı</h1>
            <p class="text-muted">Vücut ölçülerini gir, yapay zeka sana özel antrenman programını hazırlasın.</p>
        </div>

        <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
            <div class="card-header bg-danger text-white p-4">
                <h5 class="mb-0 fw-bold"><i class="fa-solid fa-sliders me-2"></i> Fiziksel Bilgiler</h5>
            </div>
            <div class="card-body p-5 bg-white">
                <form>
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Cinsiyet</label>
                            <select class="form-select form-select-lg">
                                <option>Kadın</option>
                                <option>Erkek</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Hedefin Ne?</label>
                            <select class="form-select form-select-lg">
                                <option>Kilo Vermek (Yağ Yakımı)</option>
                                <option>Kas Kazanmak (Hipertrofi)</option>
                                <option>Fit Kalmak (Kondisyon)</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold text-muted">Yaş</label>
                            <input type="number" class="form-control form-control-lg" placeholder="22">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold text-muted">Boy (cm)</label>
                            <input type="number" class="form-control form-control-lg" placeholder="175">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold text-muted">Kilo (kg)</label>
                            <input type="number" class="form-control form-control-lg" placeholder="70">
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-5">
                        <button type="button" class="btn btn-dark btn-lg rounded-pill py-3 fw-bold shadow" onclick="alert('Yapay Zeka Modülü Henüz API Bağlantısı Bekliyor! (Hocaya sunumda burayı anlatacağız)')">
                            <i class="fa-solid fa-wand-magic-sparkles me-2"></i> PROGRAMI OLUŞTUR
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="alert alert-light border mt-4 text-center">
            <small class="text-muted">Bu özellik <span class="fw-bold text-danger">OpenAI GPT-4</span> altyapısını kullanmaktadır.</small>
        </div>

    </div>
</div>