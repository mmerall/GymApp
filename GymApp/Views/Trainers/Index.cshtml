@model IEnumerable<GymApp.Models.Trainer>

@{
    ViewData["Title"] = "Eğitmen Kadrosu";
}

<div class="d-flex justify-content-between align-items-center mb-5 p-4 rounded-4 shadow-sm" style="background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%); color: white;">
    <div>
        <h1 class="display-6 fw-bold mb-1">Eğitmen Kadrosu</h1>
        <p class="text-white-50 mb-0">Uzman antrenörlerimizi yönetin.</p>
    </div>
    <a asp-action="Create" class="btn btn-warning btn-lg rounded-pill px-4 fw-bold shadow text-dark">
        <i class="fa-solid fa-user-plus me-2"></i> Yeni Eğitmen
    </a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-0 shadow-sm h-100" style="border-radius: 20px; transition: transform 0.3s;">

                <div class="text-center pt-4 pb-2">
                    <div style="width: 120px; height: 120px; margin: 0 auto; position: relative;">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" class="rounded-circle shadow" style="width: 100%; height: 100%; object-fit: cover; border: 4px solid white;" alt="@item.FullName">
                        }
                        else
                        {
                            <img src="https://cdn-icons-png.flaticon.com/512/4140/4140048.png" class="rounded-circle shadow" style="width: 100%; height: 100%; object-fit: cover; border: 4px solid white;" alt="Varsayılan">
                        }
                        <span class="badge bg-danger rounded-pill position-absolute bottom-0 start-50 translate-middle-x shadow-sm">
                            @item.Experience Yıl
                        </span>
                    </div>
                </div>

                <div class="card-body text-center">
                    <h5 class="fw-bold text-dark mb-1">@item.FullName</h5>
                    <p class="text-primary fw-bold small text-uppercase mb-3">@item.Specialization</p>

                    <div class="d-flex justify-content-center align-items-center bg-light p-2 rounded-3 mb-3">
                        <i class="fa-solid fa-building text-muted me-2"></i>
                        <small class="text-dark fw-bold">
                            @(item.Gym != null ? item.Gym.Name : "Salon Atanmamış")
                        </small>
                    </div>

                    <div class="d-flex justify-content-center gap-2">
                        <a asp-action="Edit" asp-route-id="@item.TrainerId" class="btn btn-outline-dark btn-sm rounded-pill px-3">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.TrainerId" class="btn btn-dark btn-sm rounded-pill px-3">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.TrainerId" class="btn btn-outline-danger btn-sm rounded-pill px-3">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>