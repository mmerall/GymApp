@model GymApp.Models.Trainer

@{
    ViewData["Title"] = "Eğitmeni Sil";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card border-0 shadow-lg rounded-4 text-center">
            <div class="card-header bg-danger text-white p-4 rounded-top-4">
                <i class="fa-solid fa-user-xmark fa-4x mb-3"></i>
                <h3 class="fw-bold">Eğitmeni Silmek İstiyor musunuz?</h3>
                <p class="mb-0">Bu işlem geri alınamaz ve eğitmen kadrodan çıkarılır.</p>
            </div>

            <div class="card-body p-5">
                <h2 class="text-dark fw-bold mb-2">@Model.FullName</h2>
                <p class="text-muted mb-4">@Model.Specialization</p>

                <div class="alert alert-light border d-inline-block px-4 py-2 rounded-pill">
                    <i class="fa-solid fa-building text-danger me-2"></i>
                    <strong>Şube:</strong> @(Model.Gym != null ? Model.Gym.Name : "Atanmamış")
                </div>

                <form asp-action="Delete" class="mt-5">
                    <input type="hidden" asp-for="TrainerId" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger btn-lg rounded-pill fw-bold shadow">
                            <i class="fa-solid fa-trash-can me-2"></i> EVET, SİL
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                            Vazgeç
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>