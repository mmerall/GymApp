@model GymApp.Models.Service

@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-0 shadow-lg rounded-4 mt-4">
            <div class="card-header bg-success text-white p-4 rounded-top-4" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
                <h3 class="fw-bold mb-0"><i class="fa-solid fa-plus-circle me-2"></i> Yeni Hizmet / Paket</h3>
                <small>Salonlarınızda sunulan yeni bir ders veya üyelik paketi tanımlayın.</small>
            </div>
            <div class="card-body p-5">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-4">
                        <label asp-for="Name" class="form-label fw-bold text-muted">Hizmet Adı</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa-solid fa-tag text-success"></i></span>
                            <input asp-for="Name" class="form-control" placeholder="Örn: 3 Aylık Fitness Üyeliği" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="Price" class="form-label fw-bold text-muted">Ücret (₺)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-turkish-lira-sign text-success"></i></span>
                                <input asp-for="Price" type="number" class="form-control" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label asp-for="Duration" class="form-label fw-bold text-muted">Süre (Dakika)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-hourglass-half text-success"></i></span>
                                <input asp-for="Duration" type="number" class="form-control" placeholder="Örn: 60" />
                            </div>
                            <span asp-validation-for="Duration" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="GymId" class="form-label fw-bold text-muted">Geçerli Olduğu Salon</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa-solid fa-building text-success"></i></span>
                            <select asp-for="GymId" class="form-select" asp-items="ViewBag.GymId"></select>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label fw-bold text-muted">Detaylı Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Bu paketin içeriği nedir?"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 mt-5">
                        <button type="submit" class="btn btn-success btn-lg rounded-pill fw-bold shadow" style="background: #11998e; border:none;">
                            <i class="fa-solid fa-check me-2"></i> HİZMETİ KAYDET
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Listeye Dön</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}